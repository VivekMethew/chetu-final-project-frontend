<!doctype html>
<html lang="en">
<%- include('../partials/default/head')%>

    <body>
        <%- include('../partials/default/header')%>
            <div class="main">
                <div class="container">
                    <div class="row mt-4">
                        <div class="col-lg-8">
                            <div class="blogs">
                                <h1 class="h3">Add Blogs</h1>
                                <div class="card w-100 p-3 mt-4">
                                    <form action="/blogs/add" method="POST" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Blog Title</label>
                                            <input type="text" name="title" class="form-control" placeholder="title..." required>
                                        </div>
                                        <div class="form-group">
                                            <label>Author Name</label>
                                            <input type="text" name="author" class="form-control" placeholder="title..." required>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea name="body" class="form-control" id="body" cols="30" rows="6" required></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Image</label>
                                            <input type="file" name="image" class="form-control" required>
                                        </div>
                                        <button type="submit" class="btn btn-info col-lg-4">Add</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <h1 class="h4 pt-3 font-weight-bold border-bottom pb-3 text-uppercase">Blog Categories</h1>
                            <ul class="nav d-block">
                                <li class="nav-item border-bottom">
                                    <a href="/home" class="nav-link">Science</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="/home" class="nav-link">History</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="/home" class="nav-link">Nodejs</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="/home" class="nav-link">Reacts</a>
                                </li>
                            </ul>
                            <h1 class="h4 pt-3 font-weight-bold border-bottom pb-3 text-uppercase">SOCIALS</h1>
                            <ul class="nav d-block">
                                <li class="nav-item border-bottom">
                                    <a href="https://www.facebook.com/" class="nav-link" target="_blank">Facebook</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="https://www.instagram.com/" class="nav-link" target="_blank">Instragram</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="https://www.linkedin.com/" class="nav-link" target="_blank">LinkedIn</a>
                                </li>
                                <li class="nav-item border-bottom">
                                    <a href="https://twitter.com/home?lang=en" class="nav-link" target="_blank">Twitter</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('../partials/default/footer')%>

                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <%- include('../partials/default/foot')%>
    </body>

</html>